.swiper-wrapper{
    flex: 1;
    width: 750rpx;
    padding-top: 80rpx;
    margin: 0 auto;
  }
  swiper{
    width: 750rpx;
    height: 900rpx;
  }
  
  .swiper-item{
    height: 900rpx;
    display: flex;
    align-items: center;
  }
  
  .swiper-item image{
    width: 448rpx;
    height: 720rpx;
    margin: 0 auto;
    border-radius: 20rpx;
    transition: all 0.6s;
  }
  .swiper-item-active image{
    width: 560rpx;
    height: 900rpx;
    transition: all 0.6s;
  }